[bandit]
# bandit -ll -ii --ini=.bandit --configfile=bandit.yml --silent

# comma separated list of target dirs/files to run bandit on
# targets = src
# targets = .
targets = neuralworks

# comma separated list of excluded paths (glob patterns supported)
# NOTE: appears to be broken in bandit 1.7.1 ( See https://github.com/PyCQA/bandit/issues/657 )
exclude = */.svn,*/CVS,*/.bzr,*/.hg,*/.git,*/__pycache__,*/.tox,*/.eggs,*/*.egg

# comma separated list of test IDs to skip
# skips =

# comma separated list of test IDs to run
# tests =

# find and process files in subdirectories
recursive = true

# write report to filename
# output =

# specify output format (csv, custom, html, json, screen, txt, xml, yaml)
# default is screen
# format = screen

# vscode default format (it overrides the default format from command line)
# format = custom

# specify output message template (only usable with --format custom),
# default is {abspath}:{line}: {test_id}[bandit]: {severity}: {msg}
# msg-template = {abspath}:{line}: {test_id}[bandit]: {severity}: {msg}

# default vscode template (it overrides the custom template from command line)
# msg-template = {line},{col},{severity},{test_id}:{msg}

# msg-template = {relpath}:{line}:{col} [{severity}] {test_id}: {msg}
